<%= form_for @article do |f| %>

  <% if @article.errors.any? %>
  <div class="errors">
    <h2>
    <%= pluralize(@article.errors.count, "error")%>found:
    </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>

  </div>
  <p>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text %> <br>
    <%= f.text_area :text %>
  </p>
    <%= f.submit %>
  <% end %>
